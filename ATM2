
#!/bin/bash

# Λήψη υπολοίπου από τον χρήστη
read -p "Παρακαλώ εισάγετε το υπόλοιπο της κάρτας σας: " balance

# Ερώτηση για τη διαδικασία που θέλει ο πελάτης
echo "Διαλέξτε διαδικασία:"
echo "Υ - Ερώτηση Υπολοίπου"
echo "Α - Ανάληψη"
echo "Κ - Κατάθεση"
read -p "Εισάγετε την επιλογή σας (Υ/Α/Κ): " action

case $action in
    "Υ" | "υ")
        # Ερώτηση Υπολοίπου
        echo "Το υπόλοιπό σας είναι: $balance €"
        ;;
    "Α" | "α")
        # Ανάληψη
        read -p "Εισάγετε το ποσό που θέλετε να αναλάβετε: " withdrawal_amount
        if (( $(echo "$withdrawal_amount > $balance" | bc -l) )); then
            echo "Η συναλλαγή δεν μπορεί να πραγματοποιηθεί: Το ποσό υπερβαίνει το διαθέσιμο υπόλοιπο."
        elif (( $(echo "$withdrawal_amount > 1000" | bc -l) )); then
            echo "Η συναλλαγή δεν μπορεί να πραγματοποιηθεί: Το ποσό υπερβαίνει το μέγιστο επιτρεπτό όριο ανάληψης (1000 €)."
        else
            balance=$(echo "$balance - $withdrawal_amount" | bc -l)
            echo "Η συναλλαγή ολοκληρώθηκε. Το νέο υπόλοιπό σας είναι: $balance €"
        fi
        ;;
    "Κ" | "κ")
        # Κατάθεση
        read -p "Εισάγετε το ποσό που θέλετε να καταθέσετε: " deposit_amount
        balance=$(echo "$balance + $deposit_amount" | bc -l)
        echo "Η συναλλαγή ολοκληρώθηκε. Το νέο υπόλοιπό σας είναι: $balance €"
        ;;
    *)
        echo "Άκυρη επιλογή. Παρακαλώ προσπαθήστε ξανά."
        ;;
esac

